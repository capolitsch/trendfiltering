citHeader("To cite the trendfiltering package in publications use:")

note <- sprintf("R package version %s", meta$Version)

citEntry(entry = "Misc",
         author = "Collin A. Politsch",
         title = "trendfiltering: Denoising one-dimensional signals, the state of the art",
         year = "2021",
         url = "https://github.com/capolitsch/trendfiltering",
         textVersion = "C.A. Politsch (2021). trendfiltering: Denoising one-dimensional signals, the state of the art. R package version 0.1.0."
         note = note,
         key = "trendfiltering")
