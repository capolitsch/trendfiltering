citHeader("To cite the trendfiltering package in publications use:")

citEntry(entry = "Article",
         author = "Collin A. Politsch, Jessi Cisewski-Kehe, Rupert A.C. Croft, Larry Wasserman",
         title = "Trend filtering – I. A modern statistical tool for time-domain astronomy and astronomical spectroscopy",
         journal = "Monthly Notices of the Royal Astronomical Society",
         year = "2020",
         url = "https://academic.oup.com/mnras/article/492/3/4005/5704413",
         textVersion = "C. A. Politsch et al. (2020a). Trend filtering – I. A modern statistical tool for time-domain astronomy and astronomical
         spectroscopy",
         key = "Politsch_2020a")

citEntry(entry = "Article",
         author = "Collin A. Politsch, Jessi Cisewski-Kehe, Rupert A.C. Croft, Larry Wasserman",
         title = "Trend filtering – II. Denoising astronomical signals with varying degrees of smoothness",
         journal = "Monthly Notices of the Royal Astronomical Society",
         year = "2020",
         url = "https://academic.oup.com/mnras/article/492/3/4019/5704414",
         textVersion = "C. A. Politsch et al. (2020b). Trend filtering – II. Denoising astronomical signals with varying degrees of smoothness",
         key = "Politsch_2020b")

citEntry(entry = "Misc",
         author = "Collin A. Politsch",
         title = "trendfiltering: The state-of-the-art method for denoising 1D signals",
         year = "2021",
         url = "https://capolitsch.github.io/trendfiltering/",
         textVersion = "C. A. Politsch (2023). trendfiltering: The state-of-the-art method for denoising 1D signals. R package version 0.3.4.",
         key = "trendfilteringRpackage")
